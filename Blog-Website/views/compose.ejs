<%- include("partials/header") %> 

<h1> Compose a new post </h1>
<br>

<form method="POST" action="/compose">
    <div class="form-group">
      <label for="postTitle" class="form-label">Post Title</label>
      <input type="text" name="title" class="form-control" 
        id="postTitle" placeholder="Start typing.....">
        
        <br>

      <label for="postBody" class="form-label">Content</label>
      <textarea name="body" id="postBody" cols="30"
        class="form-control" placeholder="Start typing....."
        rows="10"></textarea>
    </div>
    <button type="submit" name="button" class="btn btn-lg btn-primary">Publish</button>
  </form>
  

<%-include("partials/footer")  %> 